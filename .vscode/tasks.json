    "version": "2.0.0",
    "tasks": [
        {
            "label": "pprof cpu",
            "type": "shell",
            "command": "go tool pprof -http=:8080 cpu.prof",
            "problemMatcher": []
        },
        {
            "label": "pprof mem",
            "type": "shell",
            "command": "go tool pprof -http=:8080 mem.prof"
        },
        {
            "label": "run test with profile",
            "type": "shell",
            "command": "go test -cpuprofile cpu.prof -memprofile mem.prof -bench . -benchtime=10s",
            "problemMatcher": []
        }
    ]
}